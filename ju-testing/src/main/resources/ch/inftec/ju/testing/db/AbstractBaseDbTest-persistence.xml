<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="Derby ju-testing">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>ch.inftec.ju.testing.db.data.entity.Team</class>
		<class>ch.inftec.ju.testing.db.data.entity.Player</class>
		<class>ch.inftec.ju.testing.db.data.entity.TestingEntity</class>

		<properties>
			<!-- Use EclipseLink specific SessionCustomizer to set cache for sequence tables to 1 to be able to predict primary key IDs -->
			<property name="eclipselink.session.customizer" value="ch.inftec.ju.testing.db.EclipseLinkSessionCustomizer"/>

			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="eclipselink.logging.level.sql" value="FINE"/>
 			<property name="eclipselink.logging.parameters" value="true"/>
 			<property name="eclipselink.weaving" value="false"/> <!-- TODO: Try to enable weaving -->

			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />

		</properties>
	</persistence-unit>
</persistence>