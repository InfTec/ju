<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<!-- Persistence.xml for ju-testing -->
		
	<persistence-unit name="Derby InMemory-DB">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>ch.inftec.ju.testing.db.data.entity.Team</class>
		<class>ch.inftec.ju.testing.db.data.entity.Player</class>
		<class>ch.inftec.ju.testing.db.data.entity.TestingEntity</class>

		<properties>

			<property name="eclipselink.target-database" value="Derby" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.logging.level.sql" value="FINE"/>
 			<property name="eclipselink.logging.parameters" value="true"/>			

			<!-- Use EclipseLink specific SessionCustomizer to set cache for sequence tables to 1 to be able to predict primary key IDs -->
			<property name="eclipselink.session.customizer" value="ch.inftec.ju.testing.db.EclipseLinkSessionCustomizer"/>

			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:juPersTestDB;create=true" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="ch.inftec.ju.flags" value="connection,test" />
			
		</properties>
	</persistence-unit>

</persistence>